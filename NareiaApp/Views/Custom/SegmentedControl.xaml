<?xml version="1.0" encoding="utf-8" ?>
<Frame 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NareiaApp.Views.Custom.SegmentedControl"
    BackgroundColor="#F5F6F8"
    CornerRadius="8"
    Padding="2"
    HasShadow="False">

    <Grid
        ColumnDefinitions="50*, 50*">

        <Button 
            x:Name="brFirstOption"
            Grid.Column="0"
            Text="Daily"
            FontFamily="LatoBold"
            TextColor="{DynamicResource Primary}"
            BackgroundColor="White"
            Clicked="OnFirstOptionClicked"/>

        <Button
            x:Name="btSecondOption"
            Grid.Column="1"
            Text="Favorites"
            FontFamily="LatoBold"
            TextColor="{DynamicResource Primary}"
            BackgroundColor="Transparent"
            Clicked="OnSecondOptionClicked"/>

    </Grid>

</Frame>
