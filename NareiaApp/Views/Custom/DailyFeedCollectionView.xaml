<?xml version="1.0" encoding="utf-8" ?>
<CollectionView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:NareiaApp.Models"
    xmlns:views="clr-namespace:NareiaApp.Views.Custom"
    x:Class="NareiaApp.Views.Custom.DailyFeedCollectionView">

    <CollectionView.ItemsLayout>
        <LinearItemsLayout Orientation="Vertical" ItemSpacing="48"/>
    </CollectionView.ItemsLayout>

    <CollectionView.Header>

        <VerticalStackLayout
            Spacing="12"
            Padding="0,0,0,16">

            <views:FeedSwitcher 
                Margin="16,0"/>

            <Label
                Margin="16,0"
                FontFamily="Lato"
                FontSize="12"
                Text="Expires in 23:56"
                TextColor="{DynamicResource Tertiary}"/>

            <Label
                Margin="16,0"
                FontFamily="Lato"
                FontSize="16"
                Text="Find daily ideas for your inspiration"
                TextColor="{DynamicResource Secondary}"/>

        </VerticalStackLayout>
        
    </CollectionView.Header>

    <CollectionView.ItemTemplate>

        <DataTemplate x:DataType="models:FeedItem">

            <views:FeedItemView/>

        </DataTemplate>

    </CollectionView.ItemTemplate>

</CollectionView>
