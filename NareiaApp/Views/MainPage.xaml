<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:NareiaApp.Views.Custom"
             xmlns:models="clr-namespace:NareiaApp.Models"
             xmlns:vm="clr-namespace:NareiaApp.ViewModels"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Compat.Maui"
             x:Class="NareiaApp.Views.MainPage"
             x:DataType="vm:MainPageViewModel">

    <Grid
        RowDefinitions="80,*">

        <Grid
            Grid.Row="0"
            ColumnDefinitions="auto, *, 40"
            Padding="12,0">

            <Label
                Grid.Column="0"
                Text="Ideas"
                FontFamily="LatoBold"
                FontSize="32"
                VerticalTextAlignment="Center"
                TextColor="{DynamicResource Primary}"/>

            <Image
                Grid.Column="2"
                WidthRequest="32"
                HeightRequest="32"
                Source="ic_instagram.png"/>

        </Grid>
        
        <views:DailyFeedCollectionView
            Grid.Row="1"
            ItemsSource="{Binding ItemsSource}"/>

    </Grid>

</ContentPage>
