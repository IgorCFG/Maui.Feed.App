<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.Feed.App.Views.Pages.StrategyPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Strategy"
    IconImageSource="settings_2_line">

    <VerticalStackLayout
        Padding="16"
        CompressedLayout.IsHeadless="True"
        Spacing="12"
        VerticalOptions="CenterAndExpand">

        <Image
            HeightRequest="56"
            Source="settings_2_line"
            WidthRequest="56" />

        <Label
            FontFamily="LatoBold"
            FontSize="18"
            HorizontalTextAlignment="Center"
            Text="Strategy"
            TextColor="{DynamicResource Primary}" />

    </VerticalStackLayout>

</ContentPage>